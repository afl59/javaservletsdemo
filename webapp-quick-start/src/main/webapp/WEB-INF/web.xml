<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>SimpleServlet</servlet-name>
		<servlet-class>com.luo.webapp.quickstart.SimpleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MVCServlet</servlet-name>
		<servlet-class>com.luo.webapp.quickstart.MVCServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ConversionServlet</servlet-name>
		<servlet-class>com.luo.webapp.quickstart.ResultSetToArrayServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TaskServlet</servlet-name>
		<servlet-class>com.luo.webapp.quickstart.TaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SimpleServlet</servlet-name>
		<url-pattern>/simple</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MVCServlet</servlet-name>
		<url-pattern>/mvc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConversionServlet</servlet-name>
		<url-pattern>/convert</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TaskServlet</servlet-name>
		<url-pattern>/task</url-pattern>
	</servlet-mapping>
</web-app>
